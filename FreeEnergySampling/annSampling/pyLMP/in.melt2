from lammps import lammps
def post_force_callback(lammps_ptr, vflag):
	lmp = lammps(ptr=lammps_ptr)
	f = lmp.extract_atom("f",3)
	dx = 50
	natoms = lmp.get_natoms()
	for i in range(natoms):
			f[i][0] += dx 
